      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'UA-3416596-20');
  body(ontouchstart='')
    .admin-cp
      button.admin-cp-button(type='button', name='button') Скрыть / Показать Панель
      .admin-cp-items.hidden
        label.vzbltyLabel(for='splashPageToggle')
          input#splashPageToggle.toggleCheckbox(type='radio', name='pT')
          | Страница загрузки
        label.vzbltyLabel(for='gameMenuPageToggle')
          input#gameMenuPageToggle.toggleCheckbox(type='radio', name='pT', checked='checked')
          | Страница меню игры
        label.vzbltyLabel(for='aboutPageToggle')
          input#aboutPageToggle.toggleCheckbox(type='radio', name='pT')
          | Страница инфомарции
        label.vzbltyLabel(for='tutorialPageToggle')
          input#tutorialPageToggle.toggleCheckbox(type='radio', name='pT')
          | Страница обучения
        label.vzbltyLabel(for='playDelayPageToggle')
          input#playDelayPageToggle.toggleCheckbox(type='radio', name='pT')
          | Страница задержки
        label.vzbltyLabel(for='playAreaPageToggle')
          input#playAreaPageToggle.toggleCheckbox(type='radio', name='pT')
          | Страница игрового поля
        label.vzbltyLabel(for='pauseMenuPageToggle')
          input#pauseMenuPageToggle.toggleCheckbox(type='radio', name='pT')
          | Страница меню паузы
        label.vzbltyLabel(for='youLostPageToggle')
          input#youLostPageToggle.toggleCheckbox(type='radio', name='pT')
          | Страница проигрыша
        label.vzbltyLabel(for='levelPassedPageToggle')
          input#levelPassedPageToggle.toggleCheckbox(type='radio', name='pT')
          | Страница прохождения
        label.vzbltyLabel(for='scoreTablePageToggle')
          input#scoreTablePageToggle.toggleCheckbox(type='radio', name='pT')
          | Страница таблицы рекордов
    .main-wrapper
      // SPLASH/LOADING PAGE
      #pageSplash.page-cont.page-splash.page-faded-bg
        .fixed-75w-wrapper
          #splashScreenLogo.tpbl-circle.c-white.splash-screen-logo
          #splashScreenTxt
            | Загрузка
      // GAME MENU PAGE
      #pageGameMenu.page-cont.page-game-menu.page-faded-bg
        .fixed-75w-wrapper
          .gm-menu-header-cont
            .tpbl-circle.c-blue.gm-menu-logo-bg
            h1.gm-menu-title Tap Tap Tap
            h2.gm-menu-subtitle Каждый Tap Имеет Значение
          button#newGameBtn.gm-btn.btn-blue(type='button', name='button') Новая Игра
          button#scoresTableButton.gm-btn(type='button', name='button') Таблица рекордов
          button#aboutBtn.gm-btn(type='button', name='button') Информация
      // ABOUT PAGE
      #pageAbout.page-cont.page-about.page-faded-bg.anmtd-grdnt-bg.blu-grdnt-bg.no-bg
        .fixed-75w-wrapper
          .info-screen-title-cont
            .info-screen-ttl-txt-bld Информация
          .info-screen-txt-cont
            div Разработчики:
            a.txt-bold Mikhailushka & kirillvlom
            hr
            div Дань уважения:
            .credits-cont
              ul.credits-list
                li Mahdi Farra
                li
                  | Nour Abu Saud
                li Ahmed El Gabri
                li Gustavo Siqueira
                li Eduardo Abreu
                li Michael Rurka
                li Kolton Gagnon
                li Philip Rurka
          #abtPageBackBtn.tpbl-circle.c-white.submit-circle
      // NEW HIGH SCORE PAGE
      #pageHighScore.page-cont.page-high-score.page-faded-bg.anmtd-grdnt-bg.rd-grdnt-bg.no-bg
        .fixed-75w-wrapper
          .info-screen-title-cont
            .info-screen-icon.you-lost-icon
            .info-screen-ttl-txt-bld Игра окончена
            div Вы проиграли
          .info-screen-txt-cont
            .info-screen-body-txt-reg Счет
            #lvlLostNewHighScore.lvl-fnshd-score-nmb 86
            .info-screen-body-txt-reg Новый рекорд
            .lvl-fnshd-highscore-icon
          .sbmt-tryagain-txt Еще раз?
          .tpbl-circle.c-white.submit-circle
      // SCORES TABLE PAGE
      #pageScoresTable.page-cont.page-high-score.page-faded-bg.anmtd-grdnt-bg.rd-grdnt-bg.no-bg
        .fixed-75w-wrapper
          .info-screen-title-cont
            .info-screen-ttl-txt-bld Таблица рекордов
            div Ваш личный рекорд: 123
          .info-screen-txt-cont
            .lvl-fnshd-score-nmb Друг 1: 123
            .lvl-fnshd-score-nmb Друг 2: 123
            .lvl-fnshd-score-nmb Друг 3: 123
            .lvl-fnshd-score-nmb Друг 4: 123
            .lvl-fnshd-score-nmb Друг 5: 123
            .lvl-fnshd-highscore-icon
          #scrPageBackBtn.tpbl-circle.c-white.submit-circle
      // GAME TUTORIAL PAGE
      #pageTutorial.page-cont.page-tutorial.page-faded-bg
        .fixed-100w-wrapper
          #tutPgStartGameBtn.tpbl-circle.c-blue.tut-circle
          .tut-arrow
          h2.tut-text
            | TAP по кругу
            br
            | что бы начать
      // PLAY DELAY PAGE
      #pagePlayDelay.page-cont.page-play-delay.page-faded-bg
        #palyDelayCont.fixed-75w-wrapper
          #playDelayNum
            | 3
      // GAME PLAY AREA PAGE
      #pagePlayArea.page-cont.page-play-area
        .game-stats-cont
          // time progress bar
          #gmStatsTimeProgress.gm-stats-time-progress
          .gm-stats-wrapper
            // pause button
            .gm-stats-vcont
              button#gmStatsPauseBtn.gm-stats-pause-button
            // score
            .gm-stats-vcont
              .stat-wrapper
                .gm-stats-title Счет
                #gmStatsScore.gm-stats-value 2894
            // level number
            .gm-stats-vcont
              .stat-wrapper.text-align-right
                #gmStatsLvlNumb.gm-stats-title Уровень 7
                .gm-stats-value
                  span#gmStatsCurrentTapCount.gm-stats-tap-count 16
                  span#gmStatsTotalTapCount /20
        #gameSpace.game-space
          // Where the magic happens
          // <div class="tpbl-circle c-blue"></div>
          // <div class="tpbl-circle c-red"></div>
      // GAME PAUSE PAGE
      #pagePauseMenu.page-cont.page-pause-menu.page-faded-bg.anmtd-grdnt-bg.blu-grdnt-bg.no-bg
        .fixed-75w-wrapper
          .info-screen-title-cont
            .info-screen-icon.puz-icon
            .info-screen-ttl-txt-bld Пауза
          .info-screen-txt-cont
            .info-screen-body-txt-reg Счет
            #lvlPausedScore.lvl-fnshd-score-nmb 521
          .puz-menu-btnz-cont
            button#pmCntnuGmBtn.gm-btn.btn-blue Продолжить
            button#pmRstrtLvlBtn.gm-btn.pm-rstrt-lvl-btn Заново
      // YOU LOST PAGE
      #pageYouLost.page-cont.page-you-lost.page-faded-bg.anmtd-grdnt-bg.rd-grdnt-bg.no-bg
        .fixed-75w-wrapper
          .info-screen-title-cont
            #lvlLostIcon.info-screen-icon.you-lost-icon
            .info-screen-ttl-txt-bld Игра окончена
            #lvlLostTtl Вы проиграли
          .info-screen-txt-cont
            .info-screen-body-txt-reg Счет
            #lvlLostScore.lvl-fnshd-score-nmb 746
            //
              <div class="info-screen-body-txt-reg">Best Score</div>
              <div id="lvlLostBestScore" class="lvl-fnshd-score-nmb">146</div>
          .sbmt-tryagain-txt Еще раз?
          #lvlLostTryAgainBtn.tpbl-circle.c-white.submit-circle
      // LEVEL PASSED PAGE
      #pageLevelPassed.page-cont.page-level-passed.page-faded-bg.anmtd-grdnt-bg.grn-grdnt-bg.no-bg
        .fixed-75w-wrapper
          .info-screen-title-cont
            .info-screen-icon.flag-icon
            #lvlPssdTtl Уровень 2
            .info-screen-ttl-txt-bld Пройден
          .info-screen-txt-cont
            .info-screen-body-txt-reg Счет
            #lvlPssdScore.lvl-fnshd-score-nmb 521
            #lvlPssdBonusScore.grow-animation
          #lvlPssdContinueNextLvlBtn.tpbl-circle.c-white.submit-circle
    // logic & brain
    script(src='js/habibiScript.js')
